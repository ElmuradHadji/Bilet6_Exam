@model List<PortfolioGetVM>
@{
    int count = 1;
}
<section id="portfolio">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12">
                <h1>OUR PORTFOLIO </h1>
            </div>
        </div>
        <div class="row text-center pad-top g-2">
            @if (Model.Count != 0)
            {
                foreach (PortfolioGetVM portfolio in Model)
                {
                    <div class="col-md-4 col-sm-4 mb-2 col-xs-12">
                        <a href="#portfolioBig@(count)" data-toggle="modal">
                            <img src="~/assets/img/@portfolio.Image" class="img-responsive " alt="@portfolio.AlternativeText" />
                        </a>
                    </div>
                    count++;
                }
            }

        </div>


        <!--PORFOLIO POPUPS -->
        @if (Model.Count != 0)
        {
            count = 1;
            foreach (PortfolioGetVM portfolio in Model)
            {
                <div class="modal fade" id="portfolioBig@(count)" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-content">

                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 ">
                                    <div class="modal-body">

                                        <span class="fa fa-scissors fa-3x pull-right" data-dismiss="modal">CLOSE</span>
                                        <hr />
                                        <h1>YOUR PROJECT TITLE</h1>
                                        <br />
                                        <img src="~/assets/img/@portfolio.Image" class="img-responsive " alt="" />

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                count++;
            }
        }


    </div>
</section>