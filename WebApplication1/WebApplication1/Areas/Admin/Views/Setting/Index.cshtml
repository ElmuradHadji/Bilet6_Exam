@model SettingGetVM
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hoverable Table</h4>
            <p class="card-description">
                Add class <code>.table-hover</code>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Logo</th>
                            <th>Adress</th>
                            <th>Year</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model is null)
                        {

                            <partial>No DATA!</partial>
                        }
                        else
                        {
                            <tr>
                                <td>@count</td>
                                <td>@Model.Logo</td>
                                <td> @Model.Adress</td>
                                <td> @Model.Year</td>
                                <td>
                                    <a asp-action="Update" asp-controller="Setting" ><i class="mdi mdi-pencil"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

